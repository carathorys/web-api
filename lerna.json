{
  "npmClient": "yarn",
  "version": "0.0.0",
  "useWorkspaces": true,
  "conventionalCommits": true,
  "packages": [
    "packages/*"
  ],
  "changelogPreset": {
    "name": "conventionalcommits",
    "types": [
      {
        "type": "feat",
        "section": "🚀 What's new"
      },
      {
        "type": "fix",
        "section": "🐛 Bug Fixes"
      },
      {
        "type": "perf",
        "section": "Performance improvements"
      },
      {
        "type": "chore",
        "hidden": true
      },
      {
        "type": "docs",
        "hidden": true
      },
      {
        "type": "style",
        "hidden": true
      },
      {
        "type": "refactor",
        "hidden": true
      },
      {
        "type": "test",
        "hidden": true
      }
    ],
    "issuePrefixes": ["#"]
  }
}
